@page
@model ConfirmEmailRequiredModel
@{
    ViewData["Title"] = "Email not confirmed";
}
<header>
    <h2 class="text-danger">@ViewData["Title"]</h2>
</header>

<partial name="_ValidationSummary" for="ViewData.ModelState" />

<p class="text-danger">This account has not had the email confirmed.</p>
<p>
    <a asp-page="./ConfirmEmailResend">Click here to confirm Email</a>
</p>