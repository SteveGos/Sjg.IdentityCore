@model Sjg.IdentityCore.Areas.UserMgmt.Pages.GroupMgmtModel
@{
    ViewData["Title"] = "Groups";

    var groupDir = string.Empty;
    var catDir = string.Empty;
    var descrDir = string.Empty;

    switch (Model.SortOrder.ToLower())
    {
        case "group_asc":
            groupDir = "fa-sort-alpha-up"; // "fa-sort-up";
            break;
        case "group_desc":
            groupDir = "fa-sort-alpha-down"; //"fa-sort-down";
            break;
        case "cat_asc":
            catDir = "fa-sort-alpha-up"; // "fa-sort-up";
            break;
        case "cat_desc":
            catDir = "fa-sort-alpha-down"; //"fa-sort-down";
            break;
        case "descr_asc":
            descrDir = "fa-sort-alpha-up"; // "fa-sort-up";
            break;
        case "descr_desc":
            descrDir = "fa-sort-alpha-down"; //"fa-sort-down";
            break;
        default:
            break;
    }

}
<header>
    <h5>@ViewData["Title"]</h5>
</header>

<div class="alert alert-danger" role="alert">
    <b>Group authorization feature not yet implemented.</b> - Sjg
</div>

