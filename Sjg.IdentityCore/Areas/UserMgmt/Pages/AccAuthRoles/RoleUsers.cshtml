@page
@model Sjg.IdentityCore.Areas.UserMgmt.Pages.AccAuthRoles.RoleUsersModel
@{
    ViewData["Title"] = "Associated Role/Users";

    var emailDir = string.Empty;

    switch (Model.SortOrder.ToLower())
    {
        case "email_asc":
            emailDir = "fa-sort-alpha-up"; // "fa-sort-up";
            break;
        case "email_desc":
            emailDir = "fa-sort-alpha-down"; //"fa-sort-down";
            break;
        default:
            break;
    }
}

<h5>
    @ViewData["Title"]
    <small>
        &nbsp;&nbsp;
        <a asp-page="./Details" asp-route-id="@Model.AccessRole.Id">Back</a>
    </small>
</h5>

<hr />

<partial name="_AccessRoleHeader" for="AccessRole" />

<form asp-page="./RoleUsers" method="get">
    <input type="hidden" asp-for="Id" />
    <div class="input-group">
        <input type="text" class="form-control" id="SearchFor" name="SearchFor" aria-describedby="emailHelp" placeholder="Search" value="@Model.SearchFor">
        @*<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>*@
        <div class="input-group-append">
            <button type="submit" class="btn btn-primary">Search</button>
            <a class="btn btn-secondary" asp-page="./RoleUsers" asp-route-id="@Model.Id">Clear</a>
            <a class="btn btn-secondary" asp-page="./RoleUserAdd" asp-route-id="@Model.Id">Add</a>
        </div>
    </div>
</form>

<hr />

<partial name="_ValidationSummary" for="ViewData.ModelState" />

<h5>Associated Users</h5>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                <a asp-page="./RoleUsers"
                   asp-route-id="@Model.AccessRole.Id"
                   asp-route-sortOrder="@Model.EmailSort"
                   asp-route-grid_Page="1"
                   asp-route-grid_Pagecount="@Model.GridPagerModel.Grid_Pagecount"
                   asp-route-SearchFor="@Model.SearchFor"
                   asp-route-grid_Pagesize="@Model.GridPagerModel.Grid_Pagesize"
                   asp-route-grid_Buttoncount="@Model.GridPagerModel.Grid_Buttoncount">
                    @Html.DisplayNameFor(model => model.GridData[0].Email)
                    <i class="fas @emailDir"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GridData)
        {
        <tr>
            <td>
                <a asp-page="/AccAuthRoles/RoleUsers"
                   onclick="return confirm('Confirm Removal of User from Role.')"
                   asp-route-id="@Model.Id"
                   asp-route-removeid="@item.Id"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-SearchFor="@Model.SearchFor"
                   asp-route-grid_page="@Model.GridPagerModel.Grid_Page"
                   asp-route-grid_pagecount="@Model.GridPagerModel.Grid_Pagecount"
                   asp-route-grid_pagesize="@Model.GridPagerModel.Grid_Pagesize"
                   asp-route-grid_buttoncount="@Model.GridPagerModel.Grid_Buttoncount">
                    Remove
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
        }
    </tbody>
</table>
<acc-auth-grid-pager grid_pagecount="@Model.GridPagerModel.Grid_Pagecount"
                     grid_page="@Model.GridPagerModel.Grid_Page"
                     grid_pagesize="@Model.GridPagerModel.Grid_Pagesize"
                     grid_buttoncount="@Model.GridPagerModel.Grid_Buttoncount"
                     url="./RoleUsers">
</acc-auth-grid-pager>